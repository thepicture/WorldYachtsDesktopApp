<Page x:Class="WorldYachtsDesktopApp.Views.Pages.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WorldYachtsDesktopApp.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Смена пароля">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Текущий пароль" />
                <PasswordBox Name="CurrentPassword" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Новый пароль" />
                <PasswordBox Name="NewPassword" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Подвердите новый пароль" />
                <PasswordBox Name="NewPasswordCheck" />
            </StackPanel>
            <Button Content="Сменить пароль"
                    Click="PerformChangePassword"
                    Width="auto" />
        </StackPanel>
    </Grid>
</Page>
